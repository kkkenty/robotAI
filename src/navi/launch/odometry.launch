<launch>
    <!-- Arguments -->
    <arg name="joystick" 	  	default="false"/>
    <arg name="controller"  	default="true"/>
    <arg name="StrArduino" 		default="true"/>
    <arg name="DrvArduino" 		default="true"/>
    <arg name="odometry"		default="true"/>

    <arg name="urg"		        default="false"/>
    <arg name="map_server"	    default="false"/>
    <arg name="amcl"	      	default="false"/>
    <arg name="rviz"		    default="false"/>
    <arg name="pure_pursuit"	default="false"/>

    <rosparam command="load" file="$(find navi)/config/params.yaml"/>

    <group if="$(arg joystick)">
        <node name="joystick" pkg="joy" type="joy_node" required="true">
            <param name="dev" value="/dev/input/js2"/>
        </node>
    </group>

    <group if="$(arg controller)">
        <node name="controller" pkg="navi" type="controller5" output="screen" required="true"/>
    </group>

    <group if="$(arg StrArduino)">
        <node pkg="rosserial_python" type="serial_node.py" name="StrArduino" required="true">
            <param name="port" value="/dev/ttyACM0"/>
            <param name="baud" value="57600"/>
        </node>
    </group>

    <group if="$(arg DrvArduino)">
        <node pkg="rosserial_python" type="serial_node.py" name="DrvArduino" required="true">
            <param name="port" value="/dev/ttyACM1"/>
            <param name="baud" value="115200"/>
        </node>
    </group>

    <group if="$(arg odometry)">
        <node pkg="navi" name="odometry" type="odometry" output="screen" required="true"/>
    </group>
  
    <group if="$(arg urg)">
        <node pkg="urg_node" name="urg_node" type="urg_node" required="true">
            <param name="frame_id" value="base_laser"/>
            <param name="serial_port" value="/dev/serial/by-id/usb-Hokuyo_Data_Flex_for_USB_URG-Series_USB_Driver-if00"/>
            <param name="angle_max" value="1.3"/>
            <param name="angle_min" value="-1.3"/>
        </node>
    </group>

    <group if="$(arg map_server)">
        <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>
    </group>

    <group if="$(arg amcl)">
        <include file="$(find navi)/launch/amcl.launch"/>
    </group>

    <group if="$(arg rviz)">
        <node pkg="rviz" type="rviz" name="rviz" required="true"
            args="-d $(find navi)/rviz/robot03_navi.rviz"/>
    </group>
  
    <group if="$(arg pure_pursuit)">
        <node pkg="navi" type="pure_pursuit_LED" name="pure_pursuit" output="screen" required="true">
        <param name="FRIQUENCE" value="20"/>
        <param name="den" value="200"/>
        <param name="ahed" value="15"/>
        <param name="vel" value="0.45"/>
        </node>
    </group>
</launch>
